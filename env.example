# LLM Configuration
# Choose your preferred LLM provider: openai | anthropic | ollama
LLM_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama Configuration (if using local Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Framework Configuration
LOG_LEVEL=info
MAX_RETRIES=3

# Microsoft Playwright MCP Configuration
USE_MCP_AGENT=true
PLAYWRIGHT_MCP_ENABLED=true
PLAYWRIGHT_MCP_ENDPOINT=stdio://@playwright/mcp
PLAYWRIGHT_MCP_API_KEY=not_required_for_microsoft_mcp

# Validation Pipeline Configuration
USE_ITERATIVE_IMPROVEMENT=true
MAX_VALIDATION_ITERATIONS=3
ENABLE_SYNTAX_VALIDATION=true
ENABLE_PRE_FLIGHT_CHECKS=true

# Skyvern AI Integration
SKYVERN_API_KEY=your_skyvern_api_key_here
SKYVERN_BASE_URL=https://api.skyvern.com/api/v1
SKYVERN_WEBHOOK_URL=https://your-domain.com/webhook/skyvern
USE_SKYVERN_AGENT=true
SKYVERN_TIMEOUT=300000
SKYVERN_MAX_RETRIES=3
