{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "types": ["node", "@playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@pages": ["src/pages/index"],
      "@pages/*": ["src/pages/*"],
      "@utils": ["src/utils/index"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "scripts", "tests"],
  "exclude": ["node_modules", "dist"]
}

